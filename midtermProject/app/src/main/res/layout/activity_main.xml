<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F39A9A"
        android:gravity="center"
        android:text="상품 선택"
        android:textSize="25dp" />
    <Button
        android:text="cart"
        android:id="@+id/shoppingcartBtn0"
        android:layout_above="@+id/listView"
        android:layout_alignRight="@+id/listView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#41FF6B6B"
        android:textColor="#FFFFFF"
        android:layout_margin="1dp"
        />


    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title">

    </ListView>
    <RelativeLayout
        android:id="@+id/buyingTap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="#F39A9A"
        android:visibility="invisible"
        >
        <Button
            android:text="←"
            android:id="@+id/backbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#E49292"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:textSize="10dp"
            />
        <Button
            android:text="장바구니"
            android:id="@+id/shoppingcartBtn"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="#F39A9A"
            android:layout_margin="1dp"
            android:layout_toRightOf="@+id/backbtn"
            />
        <Button
            android:id="@+id/buyingbtn1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/shoppingcartBtn"
            android:text="구매"
            android:background="#F39A9A"
            android:layout_margin="1dp"
            />
    </RelativeLayout>




</RelativeLayout>